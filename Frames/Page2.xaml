            <Canvas x:Name="env管理按钮" Width="200" Margin="0,5,0,5">
                <Border x:Name="环境管理选项卡" CornerRadius="15" BorderThickness="1" Height="30" Width="243" Background="#3FFFFFFF" MouseDown="环境管理选项卡_MouseDown" HorizontalAlignment="Left" VerticalAlignment="Center">
