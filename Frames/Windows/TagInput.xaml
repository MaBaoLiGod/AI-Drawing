<Window x:Class="AetherLauncher.Frames.Windows.TagInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AetherLauncher.Frames.Windows"
              xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="TagInput" Height="120" Width="480">


    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label VerticalAlignment="Center">Tag名称:</Label>
                <TextBox x:Name="tagname" Width="450"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="OK_Click">确认</Button>
                <Button Click="Cancle_Click">取消</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
